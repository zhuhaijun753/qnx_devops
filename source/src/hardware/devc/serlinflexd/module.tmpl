<?xml version="1.0"?>
<module name="devc-linflexd">
	<type>Element</type>
	<classification>Driver</classification>

        <description>
                <short>Serial driver for linflexd compatible uarts</short>
                <abstract>
                        <![CDATA[The devc-linflexd manager is a small serial device manager for QNX Neutrino.]]>
                </abstract>
        </description>

	<supports>
		<availability>
			<cpu isa="aarch64"><byteOrder>le</byteOrder><byteOrder>le</byteOrder></cpu>
		</availability>
	</supports>

	<source available="false">
		<location type="">.</location>
	</source>
	<GroupOwner>hw</GroupOwner>

	<contents>
		<package isInternal="true">
		<component id="linflexd" generated="true">
			<location basedir="{cpu}/{endian}"
				 runtime="true">devc-sermx1</location>
		</component>
		<component id="tlinflexd" generated="true">
			<location basedir="{cpu}/{endian}"
				 runtime="true">devc-tsermx1</location>
		</component>
		</package>
	</contents>

	<requires>
		<part build="true" location="lib/io-char"/>
		<part build="false" location="hardware/devc"/>
	</requires>

</module>
